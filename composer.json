{
  "name": "bea/sanitize-filename",
  "description": "Remove all punctuation and accents from the filename of uploaded files.",
  "keywords":[
		"wordpress",
		"wordpress-plugin",
		"uploads",
		"sanitize",
		"wordpress-mu-plugin",
	  	"media"
	],
  "homepage":"https://github.com/BeAPI/bea-sanitize-filename",
  "authors": [
    {
			"name":"Be API",
			"email":"technique@beapi.fr",
			"homepage":"https://beapi.fr/"
		}
  ],
  "type": "wordpress-muplugin",
  "require": {
    "composer/installers": "^1.0|^2.0"
  },
  "config": {
    "platform": {
      "php": "5.6.0"
    },
    "process-timeout": 3600
  },
  "scripts": {
    "test": "vendor/bin/codecept run wpunit && vendor/bin/codecept run acceptance --env desktop",
    "test-local": "rm -rf wordpress/wp-content/uploads/ && vendor/bin/codecept run wpunit && vendor/bin/codecept run acceptance --env local",
    "test-local-mobile": "rm -rf wordpress/wp-content/uploads/ && vendor/bin/codecept run acceptance --env=local-mobile",

    "coding-standards": [
      "./vendor/bin/phpcs --config-set installed_paths ../../wp-coding-standards/wpcs/  && ./vendor/bin/phpcs --standard=phpcs.xml.dist ./ -p"
    ],
    "coding-style": [
      "./vendor/bin/phpcbf --standard=phpcs.xml.dist ./ --extensions=php -p"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "lucatume/wp-browser": "dev-php-56-compat",
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "1.1.0"
  }
}
